<%- include ('../partials/header.ejs') %>

<div class="container" style="margin-top:2rem ;">
    <h1 style="text-align: center;">Put up a new Car!</h1>
    <div style="width: 30%; margin:3.5rem auto;">
      <form  action="/cars" method="post">
        <div class="form-group">
          <label for="name">Car Name</label>
          <input class="form-control" type="text" name="name" placeholder="Name" required>
        </div>
        <div class="form-group">
          <label for="image">Image Url</label>
          <input class="form-control" type="text" name="image" placeholder="ImageURL" required>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea class="form-control" type="text" name="description" rows="6" placeholder="Description (max 350 characters)" required maxlength="350"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
        <hr>
            <a href="/cars">Back</a>
      </form>
    </div>


  </div>
