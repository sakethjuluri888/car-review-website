<%- include ('../partials/header.ejs') %>

<div class="container" style="margin-top: 2rem;">
    <h1 style="text-align: center;">Edit <%= cars.name %> </h1>
    <div style="width: 30%; margin:3.5rem auto;">
      <form  action="/cars/<%= cars._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="name">Car Name</label>
          <input class="form-control" type="text" name="name" value="<%= cars.name %> ">
        </div>
        <div class="form-group">
          <label for="image">Image Url</label>
          <input class="form-control" type="text" name="image" value="<%= cars.image %> ">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea class="form-control" type="text" name="description" rows="6"><%= cars.description %></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Update Car !</button>
        </div>
        <hr>
            <a href="/cars">Back</a>
      </form>
    </div>


  </div>
<%- include ('../partials/footer.ejs') %>
