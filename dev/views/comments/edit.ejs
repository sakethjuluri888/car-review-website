<%- include ('../partials/header.ejs') %>

<div class="container" style="margin-top: 2rem;">
    <h1 style="text-align: center;">Edit your Comment</h1>
    <div style="width: 30%; margin:3.5rem auto;">
      <form  action="/cars/<%=car_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
        <div class="form-group">
          <label for="text">Enter Your Comment</label>
          <textarea class="form-control" type="text" name="text" rows='3' required><%= comment.text %> </textarea>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" style="margin-top: 1rem;">Update Comment!</button>
        </div>
        <hr>
            <a href="/cars/<%= car_id %> ">Back</a>
      </form>
    </div>


  </div>
